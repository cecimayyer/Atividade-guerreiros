        "class Personagem:\n",
        "    def __init__(self,nome,vida,):\n",
        "        self.nome = nome\n",
        "        self._vida = vida   # atributo protegido\n",
        "\n",
        "\n",
        "    @property\n",
        "    def vida(self):\n",
        "        return self._vida\n",
        "\n",
        "    @vida.setter\n",
        "    def vida(self, novo_valor):\n",
        "            if novo_valor < 0:\n",
        "                print(\"A vida não pode ser negativa! \")\n",
        "                return\n",
        "            self._vida = novo_valor\n",
        "\n",
        "    def receber_dano(self, dano):\n",
        "        print(f\"{self.nome} recebeu {dano} de dano!\")\n",
        "\n",
        "        # Reduz a vida usando o setter\n",
        "        self.vida = self.vida - dano\n",
        "\n",
        "        # Verifica se morreu\n",
        "        if self.vida == 0:\n",
        "            print(f\"{self.nome} morreu!\")\n",
        "        else:\n",
        "            print(f\"Vida restante de {self.nome}: {self.vida}\")\n",
        "\n",
        "    def atacar(self, alvo):\n",
        "        print(f\"{self.nome} atacou {alvo.nome}!\")\n",
        "        dano = self.forca\n",
        "        print(f\"{self.nome} causou {dano} de dano!\")\n",
        "        alvo.receber_dano(dano)"
      ],
