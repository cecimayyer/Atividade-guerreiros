        "\n",
        "\n",
        "class Guerreiro:\n",
        "    def __init__(self, nome, vida, força, arma):\n",
        "        self.nome = nome\n",
        "        self.vida = vida\n",
        "        self.força = força\n",
        "        self.arma = arma\n",
        "\n",
        "    def ataque_s(self):\n",
        "        print(\"VC TOMOU UMA PORRADA FRACA!!\")\n",
        "\n",
        "    def ataque_espada(self):\n",
        "        print(f\"Ataque com a espada!! Dano:{self.força + self.arma.power}\")\n",
        "\n",
        "\n",
        "Espada = Armas(\"espada\",25)\n",
        "Alastor_G = Guerreiro('Alastor',150,30,Espada)\n",
        "\n",
        "print(f'\\nSeu guerreio é {Alastor_G.nome} ele possui {Alastor_G.vida} de vida e {Alastor_G.força} de força\\n')\n",
        "\n",
        "#AÇOES\n",
        "Alastor_G.ataque_s()\n",
