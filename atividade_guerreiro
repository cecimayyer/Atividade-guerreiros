        "\n",
        "\n",
        "class Mago:\n",
        "    def __init__(self, nome, vida, força, mana, arma):\n",
        "        self.nome = nome\n",
        "        self.vida = vida\n",
        "        self.força = força\n",
        "        self.mana = mana\n",
        "        self.arma = arma\n",
        "\n",
        "    def ataque_s(self):\n",
        "        print(\"FIRE BALL °°°°!!!\")\n",
        "\n",
        "    def ataque_Cajado(self):\n",
        "        print(f\"Ataque com magia!! Dano:{self.força + self.arma.power}\")\n",
        "\n",
        "Cajado = Armas('Cajado',25)\n",
        "Gargula_M = Mago('Gargula',60,10,200,Cajado)\n",
        "\n",
        "print(f'Ola Mago:{Gargula_M.nome}')\n",
        "print(f'Sua vida total é atualmente {Gargula_M.vida}')\n",
        "print(f'Possui Força {Gargula_M.força} e para magias {Gargula_M.mana} mana total\\n')\n",
        "\n",
        "#açoes\n",
        "Gargula_M.ataque_s()\n",
        "Gargula_M.ataque_Cajado()\n",
        "\n",
        "#ESPAÇ_O\n",
        "print(\"       \")"
