        "class Monstros:\n",
        "    def __init__(self, nome, vida, resist, força):\n",
        "        self.nome = nome\n",
        "        self.vida = vida\n",
        "        self.resit = resist\n",
        "        self.força = força\n",
        "\n",
        "    def ataque_s(self):\n",
        "        print(\"Ataque!!\")\n",
        "\n",
        "#Status atual\n",
        "Goblin = Monstros('Goblin',30,5,15)\n",
        "\n",
        "\n",
        "print(f'\\nInimigo: {Goblin.nome}')\n",
        "print(f'Vida: {Goblin.vida}')\n",
        "print(f'Resistencia: {Goblin.resit}')\n",
        "print(f'Força: {Goblin.força}\\n')\n",
        "\n",
